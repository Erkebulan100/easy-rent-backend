# Place in .ebextensions directory
files:
  "/etc/nginx/conf.d/01_custom_settings.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server_names_hash_bucket_size 128;
      types_hash_max_size 2048;
      types_hash_bucket_size 128;
      
container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"
    ignoreErrors: true