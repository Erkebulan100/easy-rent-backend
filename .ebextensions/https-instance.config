packages:
  yum:
    mod_ssl: []

files:
  /etc/pki/tls/certs/server.key:
    mode: "000400"
    owner: root
    group: root
    content: |
      -----BEGIN PRIVATE KEY-----
      # Key will be generated during deployment
      -----END PRIVATE KEY-----

  /etc/pki/tls/certs/server.crt:
    mode: "000400"
    owner: root
    group: root
    content: |
      -----BEGIN CERTIFICATE-----
      # Certificate will be generated during deployment
      -----END CERTIFICATE-----

  /etc/nginx/conf.d/https.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      # HTTPS server
      server {
        listen 443 ssl;
        server_name localhost;
        
        ssl_certificate /etc/pki/tls/certs/server.crt;
        ssl_certificate_key /etc/pki/tls/certs/server.key;
        
        # Redirect HTTP to HTTPS
        if ($http_x_forwarded_proto = "http") {
          return 301 https://$host$request_uri;
        }
        
        location / {
          proxy_pass http://localhost:8080;
          proxy_set_header Connection "";
          proxy_http_version 1.1;
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header X-Forwarded-Proto https;
        }
      }

container_commands:
  1_create_cert:
    command: "mkdir -p /etc/pki/tls/certs"
  2_create_self_signed_cert:
    command: "openssl req -new -newkey rsa:2048 -days 365 -nodes -x509 -subj '/C=US/ST=State/L=City/O=Organization/CN=localhost' -keyout /etc/pki/tls/certs/server.key -out /etc/pki/tls/certs/server.crt"
  3_permission:
    command: "chmod 400 /etc/pki/tls/certs/server.key /etc/pki/tls/certs/server.crt"

Resources:
  sslSecurityGroupIngress:
    Type: AWS::EC2::SecurityGroupIngress
    Properties:
      GroupId: {"Fn::GetAtt" : ["AWSEBSecurityGroup", "GroupId"]}
      IpProtocol: tcp
      ToPort: 443
      FromPort: 443
      CidrIp: 0.0.0.0/0